<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Package">

  <!-- Assemblies -->
  <PropertyGroup>
    <MSBuildCommunityTasksPath>$(MSBuildProjectDirectory)\tools\MSBuildCommunityTasks</MSBuildCommunityTasksPath>
    <MSBuildNugetTasksPath>$(MSBuildProjectDirectory)\tools\MSBuildNugetTasks</MSBuildNugetTasksPath>
  </PropertyGroup>

  <Import Project="$(MSBuildCommunityTasksPath)\MSBuild.Community.Tasks.Targets" />
  <Import Project="$(MSBuildNugetTasksPath)\MSBuild.NuGet.Tasks.Targets" />
  
  
  <!-- Properties -->
  <PropertyGroup>
    <RootDir>$(MSBuildProjectDirectory)\..</RootDir>
    <BuildDir>$(MSBuildProjectDirectory)\tmp</BuildDir>
    <PackageDir>$(MSBuildProjectDirectory)\package</PackageDir>
    <BuildNuGetDir>$(MSBuildProjectDirectory)\nugetBuild</BuildNuGetDir>
    <CoreProjectDir>$(RootDir)</CoreProjectDir>
  </PropertyGroup>
  
  <PropertyGroup>
    <VersionMajor>1</VersionMajor>
    <VersionMinor>1</VersionMinor>
    <VersionPatch>0</VersionPatch>
    <VersionSuffix></VersionSuffix>
  </PropertyGroup>

  <!-- Items -->
  <ItemGroup>
    <ProjectToBuild Include="$(CoreProjectDir)\SiteImprove.EPiserver.Plugin.csproj">
      <Properties>Configuration=Release</Properties>
    </ProjectToBuild>
  </ItemGroup>

  <!-- Targets -->
  <Target Name="Clean">
    <RemoveDir Directories="$(BuildDir)" Condition="Exists('$(BuildDir)')" />
    <RemoveDir Directories="$(PackageDir)" Condition="Exists('$(PackageDir)')" />
    <MakeDir Directories="$(BuildDir)" />
    <MakeDir Directories="$(PackageDir)" />
    <MakeDir Directories="$(BuildNuGetDir)" />
  </Target>

  <Target Name="UpdateAssemblyInfo" DependsOnTargets="Clean">
		<Version Major="$(VersionMajor)" Minor="$(VersionMinor)" BuildType="None" RevisionType="Automatic">
			<Output TaskParameter="Build" PropertyName="Build" />
			<Output TaskParameter="Revision" PropertyName="Revision" />
		</Version>
		<AssemblyInfo CodeLanguage="CS"
			OutputFile="$(CoreProjectDir)\Properties\VersionInfo.cs"
			AssemblyVersion="$(VersionMajor).$(VersionMinor).$(VersionPatch)"
			AssemblyFileVersion="$(VersionMajor).$(VersionMinor).$(Build).$(Revision)"
			AssemblyInformationalVersion="$(VersionMajor).$(VersionMinor).$(VersionPatch)$(VersionSuffix)"/>
	</Target>

  <Target Name="Compile" DependsOnTargets="UpdateAssemblyInfo">
    <MSBuild Projects="@(ProjectToBuild)" />
  </Target>

  <!-- Prep Files -->
  <Target Name="PrepairFiles" DependsOnTargets="Compile">
    <ItemGroup>
      <BinFiles Include="$(CoreProjectDir)\Bin\Release\SiteImprove.EPiserver.Plugin.dll" />
      <WebFiles Include="$(CoreProjectDir)\ClientResources\**\*.*" />
      <ViewFiles Include="$(CoreProjectDir)\Views\**\*.*" />
      <ModuleFile Include="$(CoreProjectDir)\module.config" />
      <NuSpecFile Include="$(MSBuildProjectDirectory)\package.nuspec" />
    </ItemGroup>
    <Copy SourceFiles="@(BinFiles)" DestinationFolder="$(BuildDir)\bin" />
    <Copy SourceFiles="@(WebFiles)" DestinationFolder="$(BuildDir)\ClientResources\%(RecursiveDir)" />
    <Copy SourceFiles="@(ViewFiles)" DestinationFolder="$(BuildDir)\Views\%(RecursiveDir)" />
    <Copy SourceFiles="@(ModuleFile)" DestinationFolder="$(BuildDir)" />
    <Copy SourceFiles="@(BinFiles)" DestinationFolder="$(BuildNuGetDir)\lib\net45" />
    <Copy SourceFiles="@(WebFiles)" DestinationFolder="$(BuildNuGetDir)\Content\modules\siteimprove\ClientResources\%(RecursiveDir)" />
    <Copy SourceFiles="@(ViewFiles)" DestinationFolder="$(BuildNuGetDir)\Content\modules\siteimprove\Views\%(RecursiveDir)" />
    <Copy SourceFiles="@(ModuleFile)" DestinationFolder="$(BuildNuGetDir)\Content\modules\siteimprove" />
    <Copy SourceFiles="@(NuSpecFile)" DestinationFolder="$(BuildNuGetDir)" />
  </Target>

  <Target Name="ManifestNuGet" DependsOnTargets="PrepairFiles">
    <ItemGroup>
      <ManifestFiles Include="$(BuildNuGetDir)\**\*" Exclude="$(BuildNuGetDir)\package.nuspec" />
    </ItemGroup>
    <MSBuild.NuGet.Tasks.ManifestUpdate
				ManifestFile="$(BuildNuGetDir)\package.nuspec"
				WorkingDirectory="$(BuildNuGetDir)"
				Version="$(VersionMajor).$(VersionMinor).$(VersionPatch)$(VersionSuffix)"
				Files="@(ManifestFiles)" />
  </Target>
  
  <Target Name="Package" DependsOnTargets="ManifestNuGet">
    <MSBuild.NuGet.Tasks.Pack NuGetExePath="$(RootDir)\Build\nuget\nuget.exe"
          ManifestFile="$(BuildNuGetDir)\package.nuspec"
          BasePath="$(BuildNuGetDir)"
          Version="$(VersionMajor).$(VersionMinor).$(VersionPatch)$(VersionSuffix)"
          OutputDirectory="$(PackageDir)" />

    <RemoveDir Directories="$(BuildDir)" Condition="Exists('$(BuildDir)')" />
    <RemoveDir Directories="$(BuildNuGetDir)" Condition="Exists('$(BuildNuGetDir)')" />
  </Target>
  
</Project>